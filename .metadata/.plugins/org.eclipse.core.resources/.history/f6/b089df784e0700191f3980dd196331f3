package com.github.test;

public class Rectangle {
	
	public Rectangle(int l,int y) {
		
	}
	public void print() {
		System.out.println("2、定义一个矩形类Rectangle：（知识点：对象的创建和使用）[必做题]");
	}
	public int getArea(int l,int w) {
		return l*w;
	}
	public int getPer(int l,int w) {
		return (l+w)*2;
	}
	public void showAll(int l,int w) {
		System.out.println("长"+l+"宽"+w+"面积"+l*w+"周长"+(l+w)*2);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//2.1  定义三个方法：getArea()求面积、getPer()求周长，showAll()分别在控制台输出长、宽、面积、周长。
		Rectangle d=new Rectangle(4,5);
		d.getArea(4, 5);
		d.getPer(4, 5);
		d.showAll(5, 4);
		d.print();
	}

}
